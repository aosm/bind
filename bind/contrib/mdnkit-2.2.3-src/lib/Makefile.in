	filechecker.lo \
	filemapper.lo \
	lace.lo \
	localencoding.lo \
	log.lo \
	mace.lo \
	mapper.lo \
	mapselector.lo \
	msgheader.lo \
	msgtrans.lo \
	nameprep.lo \
	normalizer.lo \
	race.lo \
	res.lo \
	resconf.lo \
	result.lo \
	selectiveencode.lo \
	strhash.lo \
	ucsmap.lo \
